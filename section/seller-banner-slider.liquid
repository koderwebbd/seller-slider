<div class="container">
   {% if section.settings.title != blank %}
   <div class="section_title-wrapper text-center">
      <div class="section_title-inner">
         <div class="section_title-text-1">{{section.settings.title}}</div>
      </div>
   </div>
   {% endif %}
  {% if section.blocks.size > 0 %}
      <div class="sbs-wrap">
         <div class="sbs-slider owl-carousel owl-theme">
            {% for block in section.blocks %}
               <div class="sbs-item">
                  <div class="sbs-i-wrap">
                     <div class="top">
                        {% if block.settings.image != blank %}
                           <a href="{{block.settings.link}}">
                           <img src="{{block.settings.image | img_url: '500x'}}" alt="{{block.settings.image.alt}}">
                           </a>
                        {% endif %}
                     </div>
                     <div class="bottom">

                        {% if block.settings.s_image != blank %}
                        <div class="seller-image">
                           <a href="{{block.settings.link}}">
                              <img src="{{block.settings.s_image | img_url: '200x'}}" alt="{{block.settings.s_image.alt}}">
                           </a>
                        </div>
                        {% endif %}

                        {% if block.settings.seller_title != blank %}
                        <div class="seller-info">
                           <div class="heading"><a href="{{block.settings.link}}">{{block.settings.seller_title}}</a></div>

                           {% if block.settings.seller_text_1 != blank %}
                              <div class="line-1">{{block.settings.seller_text_1}}</div>
                           {% endif %}

                           {% if block.settings.seller_text_2 != blank %}
                              <div class="line-1">{{block.settings.seller_text_2}}</div>
                           {% endif %}

                        </div>
                        {% endif %}
                     </div>
                  </div>
               </div>
            {% endfor %}
         </div>      
      </div>
  {% endif %}
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">

<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

<script>
   jQuery(document).ready(function($) {
      $(".sbs-slider").owlCarousel({
         loop:false,
          margin:15,
          nav:false,
          rewind: false,
          dots:false,
          responsive:{
              0:{
                  items:1,
                   margin:10,
                   autoWidth:true,
              },
              750:{
                  items:3,
                  slideBy: 3
              },
              1000:{
                  items:3,
                  nav:true,
                  rewind: false,
                  slideBy: 3
              }
          }
      });
   });
</script>
{% schema %}
{
  "name": "Seller Banner Slider",
  "class": "sbs",
  "max_blocks": 18,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Title"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Banner Image",
          "info": "Image Size 500x215px"
        },
        {
          "type": "image_picker",
          "id": "s_image",
          "label": "Seller Image",
          "info": "Image Size 200x200px"
        },
        {
          "type": "text",
          "id": "seller_title",
          "label": "Seller Title"
        },
        {
          "type": "text",
          "id": "seller_text_1",
          "label": "1st line text"
        },
        {
          "type": "text",
          "id": "seller_text_2",
          "label": "2st line text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Seller Banner Slider",
      "category": "Slider",
      "blocks": [
        { 
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
